<UserControl x:Class="Labb3.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                       Content="{Binding ActivePack.Name}"
                       FontSize="15"
                       FontWeight="Bold"
                       Margin="10 5 5 -2"
                       HorizontalAlignment="Left"/>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Content="{fa:Icon plus}" Width="20" Height="20" Margin="5 0" Command="{Binding ConfigurationViewModel.AddQuestionCommand}"/>
                    <Button Content="{fa:Icon minus}" Width="20" Height="20" Margin="5 0" Command="{Binding ConfigurationViewModel.RemoveQuestionCommand}"/>
                    <Button Content="{fa:Icon sliders}" Width="20" Height="20" Margin="5 0" Command="{Binding OpenPackOptionsCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10 5 10 5">
                    <Label Content="Kategori:" FontWeight="Bold" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding ConfigurationViewModel.Categories}"
                              SelectedItem="{Binding ConfigurationViewModel.SelectedCategory, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Height="25"/>
                </StackPanel>

                <ListView x:Name="QuestionsListView"
                          Grid.Row="2" Grid.ColumnSpan="2"
                          Margin="10 5 10 10"
                          ItemsSource="{Binding ConfigurationViewModel.Questions}"
                          SelectedItem="{Binding ConfigurationViewModel.SelectedQuestion, Mode=TwoWay}"
                          PreviewMouseDown="QuestionsList_OnPreviewMouseDown"
                          PreviewKeyDown="QuestionsListView_PreviewKeyDown"
                          Height="350">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="2">
                                <TextBlock Text="Question" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Query}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ConfigurationViewModel.SelectedQuestion}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <Label Content="Question:" FontSize="15" FontWeight="Bold" Margin="10 10 10 0"/>
            <TextBox Margin="10 10 10 0"
                     BorderThickness="1"
                     Height="90"
                     Text="{Binding ConfigurationViewModel.DraftQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>

            <Label Content="Correct Ansewer:" FontSize="10" FontWeight="Bold" Margin="10 10 10 0"/>
            <TextBox Margin="10 0"
                     BorderThickness="1"
                     Height="20"
                     Text="{Binding ConfigurationViewModel.DraftCorrectAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Wrong Ansewer 1:" FontSize="10" FontWeight="Bold" Margin="10 10 10 0"/>
            <TextBox Margin="10 0"
                     BorderThickness="1"
                     Height="20"
                     Text="{Binding ConfigurationViewModel.DraftWrong1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Wrong Ansewer 2:" FontSize="10" FontWeight="Bold" Margin="10 10 10 0"/>
            <TextBox Margin="10 0"
                     BorderThickness="1"
                     Height="20"
                     Text="{Binding ConfigurationViewModel.DraftWrong2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Wrong Ansewer 3:" FontSize="10" FontWeight="Bold" Margin="10 10 10 0"/>
            <TextBox Margin="10 0"
                     BorderThickness="1"
                     Height="20"
                     Text="{Binding ConfigurationViewModel.DraftWrong3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>

<Window x:Class="Labb3.Views.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Pack Options" Height="350" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Name:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" 
                 Text="{Binding PackName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,15"
                 Height="25"/>

        <Label Grid.Row="2" Content="Difficulty:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="3"
                  SelectedItem="{Binding SelectedDifficulty, Mode=TwoWay}"
                  ItemsSource="{Binding Difficulties}"
                  Margin="0,0,0,15"
                  Height="25"/>

        <Label Grid.Row="4" Content="Time per question (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Slider Grid.Column="0"
                    Minimum="5"
                    Maximum="60"
                    Value="{Binding TimeLimitSeconds, Mode=TwoWay}"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"/>
            <Label Grid.Column="1"
                   Content="{Binding TimeLimitSeconds, StringFormat={}{0} s}"
                   MinWidth="40"
                   VerticalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="75" 
                    Height="25"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Height="25"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>


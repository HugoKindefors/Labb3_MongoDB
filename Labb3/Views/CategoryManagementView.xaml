<UserControl x:Class="Labb3.Views.CategoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Hantera Kategorier"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 15"/>

        <GroupBox Grid.Row="1" Grid.Column="0"
                  Header="Befintliga Kategorier"
                  Margin="0 0 10 10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0"
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                         DisplayMemberPath="Name"
                         Margin="5"/>

                <Button Grid.Row="1"
                        Content="Uppdatera"
                        Margin="5"
                        Height="30"
                        Command="{Binding RefreshCategoriesCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="ArrowsRotate" Margin="0 0 5 0"/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10 0 0 10">
            <GroupBox Header="Add New Category" Margin="0 0 0 10">
                <StackPanel Margin="5">
                    <Label Content="Category Name:" FontWeight="Bold"/>
                    <TextBox Text="{Binding NewCategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="25"
                             Margin="0 0 0 10"/>
                    <Button Content="Add" 
                            Height="30"
                            Command="{Binding AddCategoryCommand}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Plus" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Edit Selected Category" Margin="0 0 0 10">
                <StackPanel Margin="5">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedCategory}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Label Content="Category Name:" FontWeight="Bold"/>
                    <TextBox Text="{Binding EditCategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="25"
                             Margin="0 0 0 10"/>
                    <Button Content="Save Changes"
                            Height="30"
                            Command="{Binding UpdateCategoryCommand}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="FloppyDisk" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Delete Category">
                <StackPanel Margin="5">
                    <Button Content="Delete Selected Category"
                            Height="30"
                            Background="#FFFF6B6B"
                            Foreground="White"
                            Command="{Binding DeleteCategoryCommand}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Trash" Margin="0 0 5 0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>

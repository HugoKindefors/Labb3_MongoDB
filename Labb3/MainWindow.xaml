<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3"
        xmlns:views="clr-namespace:Labb3.Views"
        mc:Ignorable="d"
        d:Width="600" d:Height="800"
        Title="MainWindow" Height="600" Width="700"
        MinHeight="800" MinWidth="900"
      >

    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="N" Command="{Binding NewPackCommand}" />
        <KeyBinding Modifiers="Control" Key="O" Command="{Binding SelectPackCommand}" />
        <KeyBinding Modifiers="Control" Key="S" Command="{Binding SavePackCommand}" />
        <KeyBinding Modifiers="Control" Key="Delete" Command="{Binding DeletePackCommand}" />
        <KeyBinding Modifiers="Control" Key="A" Command="{Binding ConfigurationViewModel.AddQuestionCommand}" />
        <KeyBinding Modifiers="Control" Key="P" Command="{Binding OpenPackOptionsCommand}" />
        <KeyBinding Modifiers="Alt" Key="P" Command="{Binding StartPlayCommand}" />
        <KeyBinding Modifiers="Control" Key="E" Command="{Binding SwitchToConfigurationCommand}" />
        <KeyBinding Modifiers="Alt" Key="F11" Command="{Binding ToggleFullScreenCommand}" />
        <KeyBinding Modifiers="Alt" Key="Q" Command="{Binding ConfigurationViewModel.RemoveQuestionCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="600" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0"/>

        <Grid Grid.Row="1">
            <views:PlayerView Visibility="{Binding IsPlayMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <views:ConfigurationView Visibility="{Binding IsConfigurationMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>

    </Grid>
</Window>
